[run]
source = py/obiwan
omit =
   py/obiwan/_version.py
   py/obiwan/conftest*
   py/obiwan/cython_version*
   py/obiwan/setup_package*
   py/obiwan/*/setup_package*
   py/obiwan/*/*/setup_package*
   py/obiwan/sphinx/*
   py/obiwan/test/*
   py/obiwan/*/test/*
   py/obiwan/*/*/test/*

[report]
exclude_lines =
   # Have to re-enable the standard pragma
   pragma: no cover

   # Don't complain about packages we have installed
   except ImportError

   # Don't complain if tests don't hit assertions
   raise AssertionError
   raise NotImplementedError

   # Don't complain about script hooks
   def main\(.*\):
